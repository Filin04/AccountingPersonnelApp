<Window x:Class="AccountingPersonnelApp.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccountingPersonnelApp"
        mc:Ignorable="d"
        Title="Сотрудник" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="8" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="8" />
        </Style>
    </Window.Resources>
    <DockPanel HorizontalAlignment="Stretch">
        <StackPanel Margin="0 30 0 30" DockPanel.Dock="Bottom" Height="50" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="5">OK</Button>
            <Button IsCancel="True" MinWidth="60" Margin="5">Отмена</Button>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="ФИО"></TextBlock>
            <TextBox Text="{Binding FullName}"></TextBox>

            <TextBlock Text="Дата рождения"></TextBlock>
            <DatePicker SelectedDate="{Binding DateOfBirth}"></DatePicker>

            <TextBlock Text="Пол"></TextBlock>
            <TextBox Text="{Binding Gender}"></TextBox>

            <TextBlock Text="Должность"></TextBlock>
            <TextBox Text="{Binding IdPosition}"></TextBox>

            <TextBlock Text="Подразделение"></TextBlock>
            <TextBox Text="{Binding IdDepartment}"></TextBox>
        </StackPanel>
    </DockPanel>
</Window>
